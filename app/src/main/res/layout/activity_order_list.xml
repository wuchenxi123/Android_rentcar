<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.example.administrator.userrentcar.OrderListActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="订单列表"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@android:color/holo_orange_light"
        />




    <ScrollView
        android:id="@+id/orderlist_form"
        android:layout_width="match_parent"
        android:layout_height="470dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@color/orenge">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="租车时间"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="租车天数"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="交易金额"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@android:color/white" />

            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/table_renttime1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="2016-3-20"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/table_rentdays1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="2天"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/table_trade1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="800元"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@android:color/black" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/table_renttime2"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/table_rentdays2"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/table_trade2"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@android:color/black" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/table_renttime3"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/table_rentdays3"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/table_trade3"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@android:color/black" />

            </TableRow>

        </TableLayout>

    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计："
                android:textSize="24dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/ordertimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="24dp"
                android:textColor="@android:color/holo_red_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次"
                android:textSize="24dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/totalrentdays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="8"
                android:textSize="24dp"
                android:textColor="@android:color/holo_red_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                android:textSize="24dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/totaltrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="3200"
                android:textSize="24dp"
                android:textColor="@android:color/holo_red_light"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuan"
                android:textSize="24dp"
                android:textColor="@android:color/black"/>

        </TableRow>

    </TableLayout>



</LinearLayout>
